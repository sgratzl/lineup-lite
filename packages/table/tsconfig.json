{
  "extends": "../../tsconfig.json",
  "include": ["types.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"]
    }
  },
  "typedoc": {
    "name": "LineUp-Lite Table",
    "out": "./docs",
    "theme": "minimal",
    "excludeExternals": true,
    "excludePrivate": true,
    "includeVersion": true,
    "hideGenerator": true,
  }
}
