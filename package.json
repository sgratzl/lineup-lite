{
  "name": "lineup-lite",
  "description": "",
  "version": "1.0.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "author": {
    "name": "Samuel Gratzl",
    "email": "sam@sgratzl.com",
    "url": "https://wwww.sgratzl.com"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "homepage": "https://github.com/sgratzl/lineup-lite",
  "bugs": {
    "url": "https://github.com/sgratzl/lineup-lite/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgratzl/lineup-lite.git"
  },
  "scripts": {
    "lint": "npm run prettier:check && yarn workspaces foreach -v -p --topological-dev run lint",
    "fix": "npm run prettier:write && yarn workspaces foreach -v --topological-dev run fix",
    "clean": "yarn workspaces foreach -v -p --topological-dev run clean",
    "test": "yarn workspaces foreach -v -p --topological-dev run test",
    "build": "yarn workspaces foreach -v -p --topological-dev run build",
    "build:packages": "yarn workspaces foreach -v --topological-dev --include \"@lineupjs-lite/(model|bundle|react)\" run build",
    "build:preapp": "yarn workspaces foreach -v --topological-dev --include \"@lineup-lite/(model|bundle|react)\" run build",
    "docs": "yarn workspaces foreach -v -p run docs",
    "storybook": "yarn workspace @lineup-lite/react run storybook",
    "app": "yarn workspace @lineup-lite/app run start",
    "prettier": "prettier .eslintrc.js .prettierrc.js *.json .yarnrc_patch.yml \".github/**\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "@typescript-eslint/typescript-estree": "^3.3.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.25",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
